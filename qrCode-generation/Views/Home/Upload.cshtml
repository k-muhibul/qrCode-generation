@model IEnumerable<qrCode_generation.ViewModel.QRViewModel>
@{
    ViewBag.Title = "Upload";
}

<script>
    function print() {
        console.log("hit");
        var innercontents = document.getElementById('printableArea').innerHTML;
        var popupWindow = window.open('', '', 'width=2000,height=1500,');
        popupWindow.document.open();
        popupWindow.document.write('<html><head>');
        popupWindow.document.write('<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">');
        popupWindow.document.write('</head > <body onload="window.print()">' + innercontents + '</body></html >');
        popupWindow.document.close();
    }
   
</script>

<h2>Upload</h2>
<style type="text/css">
    .coupon-item {
        font-size: x-small;
        line-height: 0.2;
        border: 1px dotted black;
        margin: 2px auto;
        padding: 10px 4px;
        display: inline-block;
        width: 100%;
        height: 63px;
        /*font-weight: bold;*/
    }


    @@media print {
        .col-sm-4, .col-sm-12, .col-sm-2 {
            float: left;
        }

        .col-sm-12 {
            width: 100%;
        }

        .col-sm-2 {
            width: 16%;
        }
    }


</style>
<div class="container print-container" id="printableArea">
    <button class="btn" onclick="print()"  id="print">Print</button>
    <table class="table table-bordered" id="table">
     <tbody>
         @foreach (var item in Model)
         {
         <tr>
             @for (int i = 0; i < 5; i++)
             {
             <td style="text-align:center">

                 <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(item.Image))" style="height:100px;width:100px;" />
                 <div>@item.name</div>
             </td>
             }

         </tr>
         }

     </tbody>   


    </table>

</div>












